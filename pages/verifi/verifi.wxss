.contain {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.title_conain {
  font-size: 34rpx;
  color: #404040;
  margin-top: 98rpx;
  margin-bottom: 58rpx;
  text-align: left;
  width: 90%;
}

.verifi_contain {
  width: 90%;
  height: 200rpx;
}

.section_contain {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  width: 100%;
  border-radius: 6rpx;
  background-color: #f7f7f7;
  margin-top: 20rpx;
}

.section_item_contain {
  height: 44rpx;
  width: 100%;
}

