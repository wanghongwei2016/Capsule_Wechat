}

.card_input {
  height: 46rpx;
  position: absolute;
  float: left;
  left: 20%;
}

.card_icon {
  width: 56rpx;
  height: 46rpx;
  position: absolute;
  float: left;
  left: 8%;
}

.verif_button {
  width: 90%;
  height: 88rpx;
  margin-top: 60rpx;
  font-size: 34rpx;
}

.info_contain {
  width: 90%;
  margin-top: 28rpx;
}

.info {
