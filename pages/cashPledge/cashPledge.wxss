.deposit_container {
  position: relative;
}

.logo_icon {
  width: 100%;
  height: 285rpx;
  margin-top: 80rpx;
}

.deposit {
  position: absolute;
  z-index: 1000;
  left: 50%;
  top: 65%;
  transform: translate(-50%, -50%);
  color: #404040;
  font-size: 100rpx;
  font-weight: bold;
}

.pay_button {
  width: 624rpx;
  height: 84rpx;
  margin-top: 184rpx;
  line-height: 84rpx;
  -moz-box-shadow: 0px 0px 20px #7bc9ff;
  -webkit-box-shadow: 0px 0px 20px #7bc9ff;
  box-shadow: 0px 0px 20px #7bc9ff;
}

.recharge_details {
  position: fixed;
  text-align: center;
  color: #189df9;
  font-size: 28rpx;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}
.deposit_info{
  position: absolute;
  font-size: 26rpx;
  color: #404040;
  left: 50%;
  top: 98%;
  transform: translate(-50%,-50%);
  width: 485rpx;
  text-align: center;
  
}

.depositDisabled{
  color: #999999;
}

.pay_back_button{
  background: #ffffff;
  color: #333333;
  -moz-box-shadow: 0px 0px 20px #cbcbcb;
  -webkit-box-shadow: 0px 0px 20px #cbcbcb;
  box-shadow: 0px 0px 20px #cbcbcb;
  margin-top: 50rpx;
}
