/* coupon.wxss */
page{
  background-color: #f0f0f0;
}


.contain {
  width: 100%;
  /* background-color: #f0f0f0; */
  display: flex;
  flex-direction: column;
  /*justify-content: center;*/
  align-items: center;
  padding-bottom: 20rpx;
}
.contain_deep {
  background-color: #e7e7e7;
}

.exchange_button {
  width: 90%;
  height: 88rpx;
  color: #404040;
  background-color: white;
  font-size: 34rpx;
  border-radius: 8rpx;
  margin-top: 42rpx;
  margin-bottom: 42rpx;
  line-height: 2.5em;
}
.coupon_contain {
  height: 182rpx;
  width: 100%;
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.coupon_item {
  width: 90%;
  height: 100%;
}
.coupon_back_image {
  height: 182rpx;
  width: 90%;
  z-index: 99;
  position: absolute;
}
.coupon_front_contain {
  z-index: 100;
  position: absolute;
  /* width: 90%; */
  /* height: 220rpx; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.left_contain {
 display:flex;
flex-direction:column;
/* justify-content:center; */
align-items:center;
width:180rpx;
height:182rpx;

}

.left_coupon {
 font-size:24rpx;
  color:#404040;
  text-align: center;
  margin-top: 18rpx;
}

.title_view {
  margin-top: 17rpx;
}

.right_content_contain{
  /* width: 510rpx; */
  padding-left: 60rpx;
}
.cash_text {
  font-size: 56rpx;
  color: #ff5459;
  font-weight: bolder;
}
.cash_placeholder {
  font-size: 26rpx;
  color: #ff5459;
  margin-left: 5rpx;
}
.sub_title_min_text {
  font-size: 36rpx;
  color: #404040;
  font-weight: bolder;
}

.sub_title_date {
  font-size: 24rpx;
  color: #404040;
}

.coupon_selected_img{
  width: 79rpx;
  height: 79rpx;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

.title_contail {
  width: 100%;
  height: 120rpx;
  background-color: white;
}

.title {
  font-size: 50rpx;
  font-weight: bolder;
  color: #333;
  margin-left: 40rpx;
}
/*无优惠券  */
.no_coupon_text {
  font-size: 24rpx;
  color: #a9a9a9;
  width: 100%;
  text-align: center;
  margin-top: 54rpx;
}

.no_coupon_icon {
  width: 80rpx;
  height: 67rpx;
  margin-top: 253rpx;
}

.coupon_contain_no {
  width:100%;
  height: 100%;
margin-top:100rpx;
