/* pages/groupbuy/groupbuy.wxss */
.contain {
  /* display: flex;
  flex-direction: column;
  justify-content: center; */
  padding-bottom: 180rpx;
}

label {
  font-family: PingFangSC-Regular, sans-serif,DIN Condensed;
}
.card_contain {
  width: 100%;
  /* align-content: center; */
  text-align: center;
}
.card_image {
  width: 458rpx;
  height: 270rpx;
  position: relative;
}
.card_title {
  z-index: 10;
  width: 458rpx;
  font-size: 38rpx;
  color: white;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 100rpx;
  left: 150rpx;
}
.content {
   display: flex;
  flex-direction: column;
  justify-content: center; 
  text-align: center;
  margin-top: 53rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.price_title {
  color: red;
  font-size: 60rpx;
  font-weight: bolder;
  margin-top: 54rpx;
}

.origin_contain {
  display: flex;
  justify-content: center;
  align-content: center;
  text-align: center;
  margin-top: 42rpx;
}
.origin_price {
  color: #999999;
  font-size: 30rpx;
  text-decoration: line-through;
  height: 28rpx;
  line-height: 28rpx;
  margin-right: 30rpx;
}
.origin_right {
  background-color: red;
  color: white;
  font-size: 18rpx;
  line-height: 28rpx;
  width: 90rpx;
  height: 28rpx;
  border-radius: 4rpx;
}

.header_contain {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 61rpx;
}

.time_label {
  font-size: 26rpx;
  color: #333333;
  margin-top: 91rpx;
  justify-content: center;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  text-align: center;
}

.red {
  font-size: 26rpx;
  color: red;
}

.time {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  
}

.time_number{
  width: 26rpx;
  color: white;
  background-color: #919191;
  border-radius: 4rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.time_placeholder {
  width: 16rpx;
  color: #333333;
  background-color: white;
  border-radius: 4rpx;
  
}

.header {
  width: 100rpx;
  height: 120rpx;
  /* margin-left: auto;
  margin-right: auto; */
  display:flex;
justify-content:center;
flex-direction:column;

}
.header_master {
  width: 100rpx;
  height: 100rpx;
    background-color: #f0f0f0;
  border-radius: 50rpx;
}

.borderstyle {
  border: 2rpx #b5b5b5 dashed;
}
/* //拼团玩法 */
.method_contain {
  display: block;
  margin-top: 82rpx;
}
.method_title {
  position: absolute;
  left: 60rpx;
}

.method_item_contain {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  text-align: center;
  margin-top: 50rpx;
}
.method_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  text-align: center;
  width: 160rpx;
  height: 130rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.method_image {
  width: 58rpx;
  height: 58rpx;
  position: absolute;
    margin-left: 40rpx;
}

.method_item_title {
  font-size: 28rpx;
  color: #333333;
    position: absolute;
    margin-top: 60rpx;

}
.method_item_subtitle{
  font-size: 20rpx;
  color: #999999;
  position: absolute;
    margin-top: 90rpx;
}
.button_contain {
 width: 680rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: white;
}
.add_button {
  width: 680rpx;
  height: 80rpx;
  font-size: 38rpx;
  line-height: 80rpx;
  font-weight: bold;
  margin-left: 35rpx;
}

.group_status_icon {
  width: 43rpx;
  height: 43rpx;
  margin-right: 20rpx;
}

.group_status_title {
  font-size: 40rpx;
  line-height: 53rpx;
  height: 53rpx;
}

.succ {
  color: #5da758;
}

.fail {
  color: red;
}
