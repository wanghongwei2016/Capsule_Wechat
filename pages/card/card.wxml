    <button class='' style='background:#189df9;color:#fff;font-size:38rpx;padding:0;line-height:2em;display:block;margin-top:.5em;margin-bottom:.5em;' bindtap="buyAction">{{bougth_card?"立即续买":"立即购买"}}</button>
