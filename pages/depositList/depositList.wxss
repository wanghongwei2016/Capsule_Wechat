/* pages/depositList/depositList.wxss */
page {
  background-color: #ffffff;
}
.contain {
  height: 130%;
}
.charge_contain {
  width: 100%;
  height: 120rpx;
  background-color: white;
}
.charge_item {
  height: 100%;
  width: 95%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /*align-items: center;*/
  margin-left: 5%;
  border-bottom: 1rpx solid #f0f0f0;
  margin-top: 2rpx;
}
.title_contain {
  height: 120rpx;
  width: 25%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 5%;
  /*float: right;
  position: absolute;*/
}
.title_date {
  font-size: 32rpx;
  color: #189df9;
  width: 100%;
  text-align: right;
  /*padding-right: 5%;*/
  /*position: absolute;*/
  /*right: 10%;*/
  /*top: 10%;*/
}
.item_sub_title {
  height: 120rpx;
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /*float: left;
  position: absolute;*/
  /*align-items: center;*/
}
.sub_top {
  font-size: 30rpx;
  color: #333333;
}
.sub_bottom {
  font-size: 26rpx;
  color: #999999;
}
.line {
  width: 95%;
  height: 2rpx;
  color: red;
  position: absolute;
  z-index: 1000;
}


/**
** 无订单
*/
.no_charge_contain {
  width: 100%;
  height: 680rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.no_charge_img {
  width: 94rpx;
  height: 93rpx;
}
.holder {
  margin-top: 93rpx;
}
.text_left {
  font-size: 28rpx;
  color: #999999;
}

.text_right {
  font-size: 28rpx;
  color: #189df9;
}

.no-data{
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin: 40rpx auto;
}