/* cityList.wxss */
page{
    height: 100%;
    background-color: #f1f1f1;
}
.city_contain {
  display: flex;
  flex-direction: column;
  align-items: left;
  text-align: left;
}
.choose_city {
  font-size: 32rpx;
  color: #404040;
  margin-left: 5%;
  margin-top: 20rpx;
}
.line {
  background-color: #d0d0d0;
  height: 2rpx;
  width: 90%;
  margin-top: 20rpx;
  margin-left: 5%;
}
.contain {
  display: flex;
  flex-wrap:wrap;
  flex-direction: row;
}
.city_button {
  font-size: 32rpx;
  width: 160rpx;
  height: 60rpx;
   margin-left:  40rpx;
   margin-right: 50rpx;
   margin-top: 30rpx;
   text-align: center;
   border-radius: 4rpx;
   line-height:30px;
}

button {
  background-color: white;
  color: #404040;
  border: none;
}
