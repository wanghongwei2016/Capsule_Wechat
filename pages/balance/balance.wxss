.recharge_details {
  position: fixed;
  text-align: center;
  color: #189df9;
  font-size: 28rpx;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}
.balance_wrap{
  width: 100%;
  position: absolute;
  z-index: 1000;
  top: 65%;
  transform: translateY(-50%);
}
.balance_wrap_wrap{
   display: flex;
  justify-content: center;
  align-items: center;
}