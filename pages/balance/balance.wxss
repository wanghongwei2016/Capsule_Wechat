.balance_container {
  position: relative;
}

.logo_icon {
  width: 100%;
  height: 285rpx;
  margin-top: 80rpx;
}

.balance {
  color: #404040;
  font-size: 100rpx;
  font-weight: bold;
}

.pay_button {
  width: 624rpx;
  height: 84rpx;
  margin-top: 184rpx;
  -moz-box-shadow: 0px 0px 20px #7bc9ff;
  -webkit-box-shadow: 0px 0px 20px #7bc9ff;
