/* orderItem.wxss */
page{
  background-color: #f0f0f0;
}
.contain {
  width: 90%;
  margin-left: 5%;
  margin-top: 10%;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title_contain {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx #f0f0f0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 32rpx;
  color: #333333;
}

.section_next_icon {
  width:12rpx;
  height: 20rpx;
  margin-left: 15rpx;
}
.price_contain {
  height: 230rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.price {
  font-size: 57rpx;
  color: #404040;
}
.placeholder {
  font-size: 26rpx;
  color: #333333;
}
.content_contain {
  width: 100%;
  height: 92rpx;
  /*padding-left: 10%;*/
  display: flex;
  flex-direction: row;
  /*justify-content: center;*/
  align-items: center;
}
.content_left {
  font-size: 30rpx;
  color: #333333;
  width: 100%;
  text-align: left;
  padding-left: 10%;
}
.content_right {
  font-size: 30rpx;
  color: #a9a9a9;
  width: 100%;
  text-align: right;
  padding-right: 10%;
}

.content_right_red {
  color: red;
}
.line {
  width: 80%;
  height: 1rpx;
  background-color: #f0f0f0;
}
.title_line {
  width: 96%;
  height: 1rpx;
  background-color: #f0f0f0;
}