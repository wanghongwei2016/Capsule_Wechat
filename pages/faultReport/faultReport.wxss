.fault_contain_wrap{
  width: 100%;
  height: 100%;
  display: flex;
}
.fault_contain{
  width: 700rpx;
  height: 100%;
  margin: 0 auto;
  position: relative;
}
.section{
  width: 100%;
}
.fault_input{
  border-radius: 50rpx;
  border:2rpx solid #999999;
  height: 80rpx;
  font-size: 34rpx;
  color: #c5c5c5;
  padding-left: 20rpx;
  margin-top: 48rpx;
  margin-bottom: 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.fault_reason{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  flex-wrap: wrap;
}

.fault_reason_item{
  width: 210rpx;
  height: 60rpx;
  border-radius: 150rpx;
  border:2rpx solid #999999;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 40rpx;
  transition: all .1s;
}
.fault_reason_item_select{
  border-color: #189df9;
  background-color: #189df9;
  color: #fff;
}
.fault_textarea{
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  border: 2rpx solid #999999;
  font-size: 26rpx;
  color: #333333;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.fault_right{
  float: right;
  font-size: 24rpx;
  color: #666666;
  margin-top: 20rpx;
}

.fault_clear{
  clear: both;
}

.fault_upload_pic_title{
  font-size: 28rpx;
  color: #666666;
}

.fault_upload_pic_wrap{
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-start;
}

.fault_upload_pic_btn{
  width: 140rpx;
  height: 140rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  text-align: center;
}

.fault_upload_pic{
  width: 70rpx;
  height: 70rpx;
  margin-top: 35rpx;
}

.fault_upload_pic_item{
  width: 140rpx;
  height: 140rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin-right: 48rpx;
}

.fault_upload_pic_item_wrap{
  position: relative;  
  width: 100%;
  height: 100%;
}

.fault_pic{
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
}

.fault_delete_pic{
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  top: -18rpx;
  right: -18rpx;
}
.user_guide_wrap{
  width: 100%;
  height: 68rpx;
  margin-top: 15rpx;
}
.user_guide{
  width: 218rpx;
  height: 68rpx;
  float: right;
  position: relative;
}
.user_guide_tag{
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  border-radius: 100%;
  background-color: #189df9;
  box-shadow:0 0 10rpx #189df9;
  left: 0;
  top: 0;
  z-index: 9;
}
.user_guide_tag_circle{
  position: absolute;
  width: 57rpx;
  height: 57rpx;
  border-radius: 100%;
  border: 1rpx solid #ffffff;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
}
.user_guide_img{
  position: absolute;
  width: 26rpx;
  height: 30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.user_guide_text_wrap{
  position: absolute;
  width: 100%;
  height: 60rpx;
  border-radius: 50rpx;
  background-color: #189df9;
  box-shadow:0 0 10rpx #189df9;
  top: 50%;
  transform: translateY(-50%);
  color: #ffffff;
  font-size: 28rpx;
}
.user_guide_text{
  width: 115rpx;
  position: absolute;
  left: 80rpx;
  top: 50%;
  transform: translateY(-50%);
}
.fault_button_submit {
  width: 100%;
  background-color: #f0f0f0;
  color: #666666;
  font-size: 34rpx;
  margin-top: 25rpx;
  transition: all .3s;
}
.fault_button_login_active {
  background: #189df9;
  color: #fff;
  /* box-shadow: 0px 0px 20px #7bc9ff; */
}
